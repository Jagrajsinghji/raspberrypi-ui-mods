#!/bin/sh

RET=0
ACTION=$(zenity --list --radiolist \
  --hide-header \
  --title="End session" \
  --text="What would you like to do?" \
  --column "Select" --column="Action" TRUE "Shutdown" FALSE "Reboot" FALSE "Logout" )
RET=$?
echo $SOUND
if [ "$ACTION" = "Shutdown" ]; then
  sudo shutdown -h now
elif [ "$ACTION" = "Reboot" ]; then
  sudo reboot 
elif [ "$ACTION" = "Logout" ]; then
  pkill lxsession
else
   echo "cancel"
fi
